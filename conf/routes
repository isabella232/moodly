# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                               controllers.Application.index

POST        /rest/moodlies                                  controllers.MoodlyResource.create
GET         /rest/moodlies/:id                              controllers.MoodlyResource.findById(id)
GET         /rest/moodlies/:id/currentIterationCount        controllers.MoodlyResource.currentIterationCounter(id)

POST        /rest/moodlies/:moodlyId/ballots                controllers.BallotResource.create(moodlyId)
GET         /rest/moodlies/:moodlyId/ballots                controllers.BallotResource.findByMoodlyId(moodlyId)

GET         /rest/moodlies/:moodlyId/ballots/:id            controllers.BallotResource.findById(moodlyId, id)

# Map static resources from the /public folder to the /assets URL path
GET         /*file                                          controllers.Assets.versioned(path="/public", file: Asset)

